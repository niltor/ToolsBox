<Window x:Class="AutoLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoLogin"
        mc:Ignorable="d"
        Title="登录器"
        Height="279"
        Width="217">
    <Grid>
        <Border BorderThickness="1"
                BorderBrush="Black"></Border>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10,10,10,0">用户名</TextBlock>
            <TextBox x:Name="UsernameBox"
                     Margin="10"
                     Height="32"
                     Padding="6"
                     VerticalAlignment="Center"></TextBox>
            <TextBlock Margin="10,0,10,0">密码</TextBlock>
            <PasswordBox x:Name="PasswordBox"
                         Padding="6"
                         Margin="10"
                         Height="32"
                         VerticalAlignment="Center"></PasswordBox>
            <Button x:Name="LoginBtn"
                    Margin="10"
                    Height="32"
                    Click="LoginBtn_Click">登录</Button>
            
            <TextBlock x:Name="Info" TextWrapping="Wrap" Margin="10"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
